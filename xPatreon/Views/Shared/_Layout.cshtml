@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - xPatreon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>


    <style>
        .box {
            width: 270px;
            height: 40px;
            background-color: rgb(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            padding: 20px;
        }

        .searchbarinput {
            background-color: rgb(0, 0, 0, 0);
            flex: 1;
            border: none;
            outline: none;
            height: 30px;
            padding-left: 8px;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/imgs/xPatreon logo.png" width="20" height="20" /></a>


                <div class="navbar-collapse collapse">



                    @if (@HttpContextAccessor.HttpContext.Session.GetString("UserID") == null)
                    {
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Product
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Lite</a>
                                    <a class="dropdown-item" href="#">Pro</a>
                                    <a class="dropdown-item" href="#">Premium</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    For Creators
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Podcasters</a>
                                    <a class="dropdown-item" href="#">Video creator</a>
                                    <a class="dropdown-item" href="#">Musicians</a>
                                    <a class="dropdown-item" href="#">Visual artist</a>
                                    <a class="dropdown-item" href="#">Communities</a>
                                    <a class="dropdown-item" href="#">Writers & Journalists</a>
                                    <a class="dropdown-item" href="#">Nonprofits</a>
                                    <a class="dropdown-item" href="#">Tutorials and Education</a>
                                    <a class="dropdown-item" href="#">Local Businesses</a>
                                    <a class="dropdown-item" href="#">Creators-of-all-kinds</a>
                                </div>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Pricing</a>
                            </li>
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Resources
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Blog</a>
                                    <a class="dropdown-item" href="#">Creator Community</a>
                                    <a class="dropdown-item" href="#">Events</a>
                                    <a class="dropdown-item" href="#">Patreon U</a>
                                    <a class="dropdown-item" href="#">App Directory</a>
                                    <a class="dropdown-item" href="#">Help Center & FAQ</a>
                                </div>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Starter Kits</a>
                            </li>
                        </ul>

                        


                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar btn btn-outline-danger rounded-pill" asp-area="" asp-controller="Account" asp-action="Register">Create on xPatreon</a>
                            <a class="navbar text-dark" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>

                            <div class="box mt-2 rounded-pill">
                                <svg width="25" height="25" style="cursor:pointer;" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M14.258 15.804a6.5 6.5 0 1 1 1.546-1.546l3.277 2.804c.404.344.835.712.906 1.238.06.448-.087.918-.43 1.258-.34.342-.81.49-1.257.429-.526-.07-.894-.502-1.238-.906l-2.804-3.277zM15.5 10.5a5 5 0 1 1-10 0 5 5 0 0 1 10 0z"></path>
                                </svg>

                                <input class="searchbarinput" placeholder="Find a creator" id="searchInput" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="navbar-nav">
                                <li>
                                    <div class="box mt-2 mr-3 rounded-pill">
                                        <svg width="25" height="25" style="cursor:pointer;" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" clip-rule="evenodd" d="M14.258 15.804a6.5 6.5 0 1 1 1.546-1.546l3.277 2.804c.404.344.835.712.906 1.238.06.448-.087.918-.43 1.258-.34.342-.81.49-1.257.429-.526-.07-.894-.502-1.238-.906l-2.804-3.277zM15.5 10.5a5 5 0 1 1-10 0 5 5 0 0 1 10 0z"></path>
                                        </svg>

                                        <input class="searchbarinput" placeholder="Find a creator" id="searchInput" />
                                    </div>
                                </li>
                                <li class="nav-item dropdown active">
                                    <a class="nav-link dropdown-header" href="#" id="navbarDropdown" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img src="@HttpContextAccessor.HttpContext.Session.GetString("UserImage")" width="35" height="35" class="rounded-circle" />
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                        <a class="navbar text-dark" asp-controller="Home" asp-action="Page">Edit page</a>
                                        <a class="navbar text-dark" asp-controller="Home" asp-action="Settings">Edit profile</a>
                                        <a class="navbar text-dark" asp-controller="Home" asp-action="CreatorPosts">Posts from my creators</a>
                                        <a class="navbar text-dark" asp-controller="Home" asp-action="CreateContent">Create content</a>
                                        <a class="navbar text-dark" asp-controller="Account" asp-action="LogOut">Log Out</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    }
                </div>

            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - xPatreon - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />

    @RenderSection("Scripts", required: false)
</body>
</html>


<script type="text/javascript">


    $(function () {
        $('#searchInput').autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/Search/GetSearchValue',
                    data: { "search": request.term },
                    cache: false,
                    type: 'POST',
                    success: function (data) {
                        response($.map(data, function (value) {                          
                            //this.applicationCache = xpto;
                            return {
                                label: value,
                                key: value
                            };
                        }))

                    },
                    error: function (response) {
                        alert(response.responseText)
                    }
                })
            },
            select: function (event, item) { window.location.replace('/Home/LaunchedPage?UserPageName=' + item.item.key); }
        })
    });
</script>

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - xPatreon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/imgs/xPatreon logo.png" width="20" height="20" /></a>


                <div class="navbar-collapse collapse">
                    @if (@HttpContextAccessor.HttpContext.Session.GetString("UserID") == null)
                    {
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Product
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Lite</a>
                                    <a class="dropdown-item" href="#">Pro</a>
                                    <a class="dropdown-item" href="#">Premium</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    For Creators
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Podcasters</a>
                                    <a class="dropdown-item" href="#">Video creator</a>
                                    <a class="dropdown-item" href="#">Musicians</a>
                                    <a class="dropdown-item" href="#">Visual artist</a>
                                    <a class="dropdown-item" href="#">Communities</a>
                                    <a class="dropdown-item" href="#">Writers & Journalists</a>
                                    <a class="dropdown-item" href="#">Nonprofits</a>
                                    <a class="dropdown-item" href="#">Tutorials and Education</a>
                                    <a class="dropdown-item" href="#">Local Businesses</a>
                                    <a class="dropdown-item" href="#">Creators-of-all-kinds</a>
                                </div>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Pricing</a>
                            </li>
                            <li class="nav-item dropdown active">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Resources
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Blog</a>
                                    <a class="dropdown-item" href="#">Creator Community</a>
                                    <a class="dropdown-item" href="#">Events</a>
                                    <a class="dropdown-item" href="#">Patreon U</a>
                                    <a class="dropdown-item" href="#">App Directory</a>
                                    <a class="dropdown-item" href="#">Help Center & FAQ</a>
                                </div>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Starter Kits</a>
                            </li>
                        </ul>

                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <a class="navbar btn btn-outline-danger rounded-pill" asp-area="" asp-controller="Account" asp-action="Register">Create on xPatreon</a>
                            <a class="navbar text-dark" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown active">
                                    <a class="nav-link dropdown-header" href="#" id="navbarDropdown" role="tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img src="/imgs/default user.png" width="35" height="35" class="rounded-circle"/>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                        <a class="navbar text-dark" asp-area="" asp-controller="Home" asp-action="CreatorPosts">Posts from my creators</a>
                                        <a class="navbar text-dark" asp-area="" asp-controller="Home" asp-action="CreateContent">Create content</a>
                                        <a class="navbar text-dark" asp-area="" asp-controller="Account" asp-action="LogOut">Log Out</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    }
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - xPatreon - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

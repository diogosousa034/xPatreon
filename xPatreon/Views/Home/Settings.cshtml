@model Services.Dto.UserDto

@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .teste{
        display:none;
    }
</style>

<link href="~/cssfolder/radiobuttonstyle.css" rel="stylesheet" />


<h1>Settings</h1>

<div class="container">
    <div class="row">
        <div class="col-12">
            <form asp-action="Settings" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="User_ID" />

                <table class="table table-borderless">
                    <tr>
                        <th class="border-right">
                            <h2>Profile</h2>
                            <div class="form-group">
                                <label asp-for="Image" class="control-label"></label>
                                <div class="rounded-circle mt-2" width="100" height="100">
                                    <img id="FrontImagePrv" src="@ViewBag.image" class="rounded-circle" alt="Image" width="100" height="100" />
                                </div>
                                <div class="mt-3">
                                    <input asp-for="FrontImage" class="teste" id="FLFrontImage"
                                           onchange="document.getElementById('FrontImagePrv').src = window.URL.createObjectURL(this.files[0])" />
                                    <label for="FLFrontImage" class="btn btn-info rounded-pill">Upload photo</label>
                                </div>
                                <span asp-validation-for="FrontImage" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="width:180px;">
                                <label class="control-label">Username</label>
                                <input asp-for="UserName" class="form-control" value="@ViewBag.username" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="width:300px;">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" value="@ViewBag.Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Role" class="control-label"></label><br />
                                <input type="radio" name="Role" value="Creator" /> Creator <br />
                                <input type="radio" name="Role" value="Reader" /> Reader
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </th>
                        <th>
                            <h2>Account</h2>
                            <div class="form-group" style="width:180px;">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="width:180px;">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-outline-danger rounded-pill" />
                            </div>
                        </th>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>
